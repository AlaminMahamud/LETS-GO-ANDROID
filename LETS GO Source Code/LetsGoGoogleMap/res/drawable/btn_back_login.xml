<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#449def" />
            <stroke
                android:width="1dp"
                android:color="#FF4083" />
            <corners
                android:radius="1dp" />

        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#FF4081"
                android:endColor="#FF4082"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#DDD" />
            <corners
                android:radius="10dp" />

        </shape>
    </item>
</selector>
